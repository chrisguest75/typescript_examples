    "@typescript-eslint/parser": "^5.30.0",
    "@types/md5-file": "^5.0.0",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.1.0",
