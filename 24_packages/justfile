  echo "** client_dual_esm"
  echo "*************************************"  
  cd clients/client_dual_esm
  npm install
  npm run test
  npm run rebuild
  npm run start
  cd ../..

test-all: test-spellcheck-cjs test-spellcheck-esm test-spellcheck-dual

