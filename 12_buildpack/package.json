{
  "name": "12_buildpack",
  "version": "1.0.0",
  "description": "Demonstrates a simple cmdline application packaged in a buildpack",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm install",
    "postinstall": "tsc --build",
    "build": "rimraf ./build && tsc",
    "lint": "eslint . --ext .ts",
    "start:dev": "nodemon",
    "start": "node ./build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^15.6.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },  
  "nodemonConfig": {
    "watch": [
      "src",
      "nodemon.json",
      "tsconfig.json",
      "package.json"
    ],
    "ext": "ts",
    "ignore": [],
    "exec": "ts-node ./src/index.ts"
  },
  "engines": {
    "node": "14.16.0"
  }  
}
